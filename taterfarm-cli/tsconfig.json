{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "./build/dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,

    "jsx": "react-jsx"
  },
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}
